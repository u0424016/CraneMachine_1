<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nkfust.edward_liao.cranemachine.FunctionActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="168dp"
        android:layout_marginTop="59dp"
        android:id="@+id/linearLayout6"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/button_pay"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="setPay"
            android:text="付款"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="setBalance"
            android:text="餘額查詢"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_binding"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="setBinding"
            android:text="帳戶綁定"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_changepassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="setChangepassword"
            android:text="更改密碼"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_logout"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="setLogout"
            android:text="登出"
            android:textSize="18sp" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/logout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:textSize="18sp"
            android:visibility="invisible" />

    </LinearLayout>

</RelativeLayout>
